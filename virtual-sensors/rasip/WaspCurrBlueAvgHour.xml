<?xml version="1.0" encoding="UTF-8"?>
<virtual-sensor name="WaspCurrBlueAvgHour" priority="10">
  <processing-class>
    <class-name>hr.fer.rasip.processingclasses.WaspCurrBlueAvgHour</class-name>
    <init-params>
      <!-- <param name="persistant">false</param> -->
    </init-params>
    <output-structure>
	     <field name="powerAvgHour" type="double"/>
     </output-structure>
  </processing-class>
  <description>Make averageHour value of data sent from the Blue current meter</description>
  <addressing />
  <storage history-size="24h" />
  <streams>
    <stream name="stream1">
      <source alias="source1" storage-size="1" sampling-rate="1">
        <address wrapper="local">
        <!--  Preuzmi podatke -->
          <predicate key="time-division">1000</predicate> <!--  1000ms -->
          <predicate key="query">select power from waspcurrblueavg</predicate>
        </address>
        <query>select * from wrapper</query>
      </source>
      <query>select * from source1</query>
    </stream>
  </streams>
</virtual-sensor>